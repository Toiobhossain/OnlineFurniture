@using Vereyon.Web
@model SmartOnlineFurniture.Models.Orders
@{
    ViewBag.Title = "PlaceToOrder";
    Layout = "~/Views/Shared/_CustomerHome.cshtml";
}

<nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar" style="padding:10px">
    <div class="container">
        <a class="navbar-brand" href="#"><i>Aponar Furniture</i></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="oi oi-menu"></span> Menu
        </button>

        <div class="collapse navbar-collapse" id="ftco-nav">
            <ul class="navbar-nav ml-auto">
                <li class="nav-item nav-link active">@Html.ActionLink("Home", "Index", "CustomersHome")</li>

                <li class="nav-item nav-link active">&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Drawing Order", "DrawingOrder", "CustomersHome")</li>
                <li class="nav-item nav-link active">&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Customer Care", "Care", "CustomersHome")</li>
                <li class="nav-item nav-link active">&nbsp;&nbsp;&nbsp;&nbsp;@Html.ActionLink("Signout", "Logout", "Home")</li>
                <li class="nav-item nav-link active" style="color:black">&nbsp;&nbsp;&nbsp;&nbsp;<span class="icon-shopping_cart" style="font-size:15px">@Html.ActionLink("[0]", "Cart", "CustomersHome")</span></li>
                <li class="nav-item nav-link active"><img src="@ViewBag.Image" width="30" height="30" style="border-radius:50%" /><span style="color:black;padding-left:5px">@Session["CustomerName"]</span></li>



            </ul>
        </div>
    </div>
</nav>
@using (Html.BeginForm())
{
<section class="ftco-section" style="margin: auto;
    width: 75%;
    padding: 0px 10px;
    border: none;
    border-radius: 15px;
    background-color: #e6ffe6;
    box-shadow: 2px 5px 15px 3px #888888;">

   
    <div class="container">
        @Html.RenderFlashMessages()
      
        <div class="row">
            
            <div class="col-lg-6 product-details pl-md-5 ftco-animate">
                <h4 style="color:green;">@ViewBag.Customename</h4>
               
                <div class="rating d-flex">
                    <p class="text-left mr-4">
                        <a href="#" class="mr-2">5.0</a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                        <a href="#"><span class="ion-ios-star-outline"></span></a>
                    </p>
                  
                </div>
                @*<p class="price" id="price"><span>@Model.Price BDT</span></p>*@

                <input type="text" name="CustomerName" value="@ViewBag.Customename" hidden />
                <input type="number" name="ProductID" value="@ViewBag.pid" hidden  />
        TotalPrice: <input class="price" type="number"  name="ProductPrice" value="@ViewBag.TotalPrice" style="border:none;background:none;font-size:22px;" readonly /><br />
                Quantity: <input class="price" type="text"  name="Quantity" value="@ViewBag.Quantity" style="border:none;font-size:18px;background:none" readonly /><br />
                Address: <input class="price" type="text" name="Address" value="@ViewBag.Address" style="border:none;font-size:18px;background:none" readonly /><br />
                Phone: <input class="price" type="text" name="Phone" value="@ViewBag.phone" style="border:none;font-size:18px;background:none" readonly /><br />
                
               <br />
                <h3>Payment Method</h3>
                <div class="col-md-8">
                    <input type="radio" name="PaymentMethod" value="Cash oh Hand" /><img src="~/Content/images/hand.jpg" style="width:70px;height:40px" />&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="radio" name="PaymentMethod" value="Bkash" /><img src="~/Content/images/bkash.jpg" style="width:80px;height:40px" />

                </div>
                <br />
                <input type="submit" value="Order Confirmed" class="btn btn-primary py-3 px-4" />
            
                    <div class="input-group col-md-6 d-flex mb-3">
                      
                      
                    </div>
                    <div class="w-100"></div>
                    
                </div>
                </div>
                
            </div>

                </section>


}



